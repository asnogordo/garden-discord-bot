# Discord Bot Configuration
BOT_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id

# Channel IDs
SCAM_CHANNEL_ID=your_scam_channel_id
GM_CHANNEL_ID=your_gm_channel_id
SUPPORT_TICKET_CHANNEL_ID=your_support_channel_id
BOT_CHANNEL_ID=your_bot_channel_id

# Role Configuration
BASE_ROLE_ID=your_base_role_id
PROTECTED_ROLE_IDS=role_id_1,role_id_2,role_id_3

# Channel Exclusions
EXCLUDED_CHANNEL_PATTERNS=pattern1,pattern2

# Etherscan v2 API Configuration
# Single API key works for all chains in v2
ETHERSCAN_API_KEY=your_etherscan_api_key

# Active Chains (comma-separated chain keys from config)
# Options: ETHEREUM, ARBITRUM, OPTIMISM, BASE, POLYGON, BSC
ACTIVE_CHAINS=ETHEREUM,ARBITRUM

# Chain-specific RPC URLs (optional - defaults provided in config)
ETHEREUM_RPC=https://eth.llamarpc.com
ARBITRUM_RPC=https://arb1.arbitrum.io/rpc

# Chain-specific Token Addresses
ETH_TOKEN_ADDRESS=0x86f65121804D2Cdbef79F9f072D4e0c2eEbABC08
ARB_TOKEN_ADDRESS=0x86f65121804D2Cdbef79F9f072D4e0c2eEbABC08

